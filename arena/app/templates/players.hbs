<div class="pull-right">
    ({{this.length}} of total: {{total}})
</div>
<table class="table">
<tr>
    <th>&nbsp;</th>
    <th>Name</th>
    <th>Team</th>
    <th>Score</th>
    <th>Last seen</th>
    <th><span {{bind-attr class="isPolling::invisible :glyphicon :glyphicon-refresh"}}></span></th>
</tr>
{{#each}}
<tr>
    <td>
        <span {{bind-attr class="online::invisible :glyphicon :glyphicon-ok"}}></span>
        {{#if headmodel}}
        <img src="/assets/headmodels/{{unbound headmodel}}.png" alt="headmodel" width="32">
        {{/if}}
    </td>
    <td>{{#link-to 'player' this}}{{quake-name name}}{{/link-to}} {{#if bot}}(bot){{/if}}</td>
    <td>{{team}}</td>
    <td>{{score}}</td>
    <td>{{fromnow-date last_seen 'DD'}}</td>
    <td>&nbsp;</td>
</tr>
{{/each}}
</table>
{{#if hasMore}}
<button {{action 'getMore'}} type="button" class="btn btn-primary btn-xs btn-block">
    {{#if loadingMore}}Loading more...{{else}}Load more{{/if}}
</button>
{{/if}}
